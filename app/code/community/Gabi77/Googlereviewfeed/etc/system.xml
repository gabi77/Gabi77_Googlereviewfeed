<config>
    <tabs>
        <gabi translate="label" module="googlereviewfeed">
            <label>Gabi77 (DEVOPS)</label>
            <sort_order>10000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
        </gabi>
    </tabs>
    <sections>
        <googlereviewfeed translate="label" module="googlereviewfeed">
            <label>Google Review Feed</label>
            <tab>gabi</tab>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general_settings translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>		
                    <fields>
                        <general_enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </general_enabled>
                         <aggregator>
                            <label>Aggregator</label>
                            <frontend_type>text</frontend_type>
                            <comment>The name of the aggregator of the product reviews.</comment>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </aggregator>
                         <publisher>
                            <label>Publisher</label>
                            <frontend_type>text</frontend_type>
                            <comment>The name of the publisher of the product reviews.</comment>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </publisher>
                        <favicon>
                            <label>Url favicon</label>
                            <frontend_type>text</frontend_type>
                            <comment>A link to the company favicon of the publisher. The image dimensions should be favicon size: 16x16 pixels. The image format should be GIF, JPG or PNG.</comment>
                            <sort_order>175</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </favicon>
                        <general_google_country>
                            <label>Google Merchant country</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>210</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </general_google_country>
                        <general_google_page_lang>
                            <label>Google Merchant Page Language</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>220</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </general_google_page_lang>
                        <general_google_product_lang>
                            <label>Google Merchant language</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>230</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </general_google_product_lang>
                        <general_google_type>
                            <label>Google Merchant Item ID</label>
                            <frontend_type>select</frontend_type>
                            <source_model>googlereviewfeed/source_product</source_model>
                            <sort_order>240</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </general_google_type>
                    </fields>
                </general_settings>
            </groups>
        </googlereviewfeed>
    </sections>
</config>
